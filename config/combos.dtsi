/ {
    combos {
        compatible = "zmk,combos";

        CapsWord {
            bindings = <&caps_word>;
            key-positions = <13 16>;
            layers = <0>;
        };

        MiddleClick {
            bindings = <&mkp MCLK>;
            key-positions = <23 31>;
        };

        RightClick {
            bindings = <&mkp RCLK>;
            key-positions = <13 31>;
        };

        LeftParen {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <12 13>;
            layers = <3>;
        };

        RightParen {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <16 17>;
            layers = <3>;
        };

        LeftBracket {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <2 3>;
            layers = <3>;
        };

        RightBracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <6 7>;
            layers = <3>;
        };

        LeftBrace {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <22 23>;
            layers = <3>;
        };

        RightBrace {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <26 27>;
            layers = <3>;
        };

        Escape {
            bindings = <&kp ESC>;
            key-positions = <10 11>;
            layers = <0>;
        };

        BASE_or_EXTRAS {
            bindings = <&td_bore>;
            key-positions = <32 33>;
        };

        BASE_or_SLOW {
            bindings = <&td_bore>;
            key-positions = <32 10>;
        };
    };
};